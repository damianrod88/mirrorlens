                                        margin-bot />
                                </a>
                                <div class="product-content">

                                    <h3 class="description font-large">
                                        <%= product.name %>
                                    </h3>
                                    <p class="price font-medium">
                                        <%= product.price %>
                                    </p>
                                    <p class="discount text-green font-medium">
                                        <%= product.desc %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <% } %>
                </section>
            </section>
        </main>
        <%- include("./partials/footer") %>
</body>

</html>