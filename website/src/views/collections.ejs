<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/shop.css" type="text/css" />
    <link rel="stylesheet" href="/css/shop-tablet.css" type="text/css" />
    <link rel="stylesheet" href="/css/shop-desktop.css" type="text/css" />
    <link rel="stylesheet" href="/css/products.css" type="text/css" />
    <%- include("./partials/head") %>

</head>

<body>
    <%- include("./partials/header") %>
        <main class="container-shop">
            <section class="pv">
                <div class="button-create">
                    <h2 class="shop-heading">
                        <%= name %>

                    </h2>
                    <% if (locals.isAdmin) { %>
                        <form action="/collections/create" method="GET">
                            <button type="submit" class="button-new-product">Nuevo Producto</button>
                        </form>
                        <% } %>
                </div>
                <section class="article-container">
                    <% for(let product of products){ %>
                        <div class="wrapper">
                            <article class="product">

                                <a href="<%=`/collections/${product.id}` %>">
                                    <img src="<%= product.imageProducts.image1 %> " class="w-100" alt="" margin-bot />
                                </a>
                                <div class="product-content">

                                    <h3 class="description font-large">
                                        <%= product.name %>
                                    </h3>
                                    <p class="price font-medium">$
                                        <%= product.price %>
                                    </p>
                                    <p class="discount text-green font-medium">
                                        <%= product.desc %>
                                    </p>
                                    <a class="button-product add-cart" href="#">Agregar
                                        al carrito
                                    </a>
                                </div>
                            </article>
                        </div>
                        <% } %>
                </section>
            </section>


        </main>

        <script src="/js/script.js"></script>
        <%- include("./partials/footer") %>
</body>

</html>